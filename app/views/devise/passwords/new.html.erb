<div class="auth-container">
  <div class="auth-content">
    <h2 class="auth-title">Forgot Your Password?</h2>
    <p>Enter your email below to receive password reset instructions.</p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'auth-form' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email' %>
      </div>
      <div class="btn-submit-wrapper">
        <%= f.submit "Send Reset Instructions", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
