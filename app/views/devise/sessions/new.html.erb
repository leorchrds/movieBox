<div class="auth-container">
  <div class="auth-content">
    <div class="auth-header">
      <h1 class="brand-name">MovieBox</h1>
      <p class="brand-tagline">Your Personal Movie Collection</p>
    </div>
    <div class="auth-form-container">
      <h2 class="auth-title">Welcome Back</h2>
      <% if flash[:alert] %>
        <div class="error-message">
          <div class="error-icon">
            <i class="fas fa-exclamation-circle"></i>
          </div>
          <div class="error-content">
            <h4>Oops! Something went wrong</h4>
            <p><%= flash[:alert] %></p>
          </div>
        </div>
      <% end %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'auth-form' }) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email' %>
        </div>
        <div class="form-group">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter your password' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me, class: 'form-check-input' %>
            <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>
        <div class="btn-submit-wrapper">
          <%= f.submit "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class="auth-links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
