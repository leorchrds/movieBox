<h1>Search Movies</h1>

<%= form_with url: search_movies_path, method: :get, local: true do %>
  <%= label_tag :query, "Enter Movie Title" %>
  <%= text_field_tag :query, params[:query], placeholder: "Search for a movie..." %>
  <%= submit_tag "Search" %>
<% end %>

<% if @movies.present? %>
  <ul>
    <% @movies.each do |movie| %>
      <li>
        <strong><%= movie["Title"] %></strong> (<%= movie["Year"] %>)
        <br>
        <img src="<%= movie["Poster"] %>" alt="<%= movie["Title"] %>" width="100">
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No movies found.</p>
<% end %>
