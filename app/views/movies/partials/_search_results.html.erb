<% @movies.each do |movie| %>
  <div class="col-6 col-sm-4 col-md-3 col-lg-2">
    <div class="card bg-dark text-white h-100">
      <img src="<%= movie['Poster'] %>" class="card-img-top" alt="<%= movie['Title'] %>" style="height: 250px; object-fit: cover;">
      <div class="card-body d-flex flex-column">
        <h6 class="card-title mb-3" style="height: auto; line-height: 1.2; white-space: normal; overflow: hidden; text-overflow: ellipsis;">
          <%= movie['Title'] %> (<%= movie['Year'] %>)
        </h6>
        <div class="mt-auto">
          <%= button_to favorite_movies_path, method: :post, params: { imdb_id: movie['imdbID'], title: movie['Title'], year: movie['Year'], genre: movie['Genre'], director: movie['Director'], synopsis: movie['Plot'], poster: movie['Poster'] }, class: 'btn btn-primary w-100' do %>
            <i class="fas fa-heart me-2"></i>Add to Favorites
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
