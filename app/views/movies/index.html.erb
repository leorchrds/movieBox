<%= render 'movies/partials/search_form' %>
<% if @movies.any? %>
  <h3 class="text-white mb-4">Favorite Movies</h3>

  <div class="row g-4">
    <% @movies.each do |movie| %>
      <%= render 'movies/partials/movie_card', movie: movie %>
    <% end %>
  </div>
<% else %>
   <%= render 'movies/partials/no_movies_message' %>
<% end %>


<% content_for :head do %>
  <style>

    .no-movies-message {
      background-color: #212529;
      border: 2px solid #e50914;
      max-width: 600px;
      margin: 0 auto;
      font-size: 1.2rem;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .no-movies-message i {
      font-size: 2rem;
      color: #e50914;
    }

    .no-movies-message p {
      font-weight: bold;
    }

    .no-movies-message:hover {
      background-color: #343a40;
      border-color: #b2070f;
      transform: translateY(-5px);
    }

    .card-title {
      min-height: 35px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .card-text {
      min-height: 45px;
      overflow: hidden;
    }

    body {
      background-color: #141414;
    }

    .movie-app {
      background-color: #141414;
    }

    .movie-card {
      max-width: 220px;
      height: 350px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .movie-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }

    .poster-wrapper {
      overflow: hidden;
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
    }

    .poster-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0,0,0,0.5);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .movie-card:hover .poster-overlay {
      opacity: 1;
    }

    .text-light-gray {
      color: #adb5bd;
    }

    .form-control {
      background-color: #2b3035;
      border: 1px solid #495057;
    }

    .form-control:focus {
      background-color: #2b3035;
      border-color: #0d6efd;
      box-shadow: none;
      color: white;
    }

    .btn-outline-light:hover {
      color: #000;
    }

    .navbar {
      box-shadow: 0 2px 4px rgba(0,0,0,.1);
    }

    .btn-primary {
      background-color: #e50914;
      border-color: #e50914;
    }

    .btn-primary:hover, .btn-primary:focus {
      background-color: #b2070f;
      border-color: #b2070f;
    }
  </style>
<% end %>